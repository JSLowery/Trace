<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/save_drawing"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Widget.MediaRouter.ControllerText.Secondary"
            android:text="Save Drawing" />

        <Button
            android:id="@+id/clear_drawing"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/save_drawing"
            android:layout_weight="0.40"
            android:textAppearance="@style/Widget.MediaRouter.ControllerText.Secondary.Light"
            android:text="Clear Drawing" />
    </RelativeLayout>

    <trace.traceapp.DrawView
        android:name="trace.traceapp.DrawView"
        android:id="@+id/custom_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />


</LinearLayout>